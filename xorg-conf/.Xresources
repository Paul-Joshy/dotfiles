*.color3:       #f9e2af
*.color4:       #89b4fa
*.color5:       #f5c2e7
*.color6:       #94e2d5
*.color7:       #bac2de
*.color8:       #585b70
*.color9:       #f38ba8
*.color10:      #a6e3a1
*.color11:      #f9e2af
*.color12:      #89b4fa
*.color13:      #f5c2e7
*.color14:      #94e2d5
