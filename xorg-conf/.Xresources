!------------------------------
! Scrollbar, bell, etc
!------------------------------
XTerm*scrollBar: false
XTerm*bellIsUrgent: true
XTerm*visualBell: true
XTerm*urgentOnBell: true
XTerm*saveLines: 10000

! Prevent focus stealing
XTerm*pointerBlank: true

