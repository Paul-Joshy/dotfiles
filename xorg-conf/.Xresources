!------------------------------
! Font and ligature support
!------------------------------
XTerm*faceName: CodeNewRoman Nerd Font
XTerm*faceSize: 11
XTerm*renderFont: true
XTerm*utf8: 2
XTerm*allowBoldFonts: true

! Enable font scaling with Ctrl + Plus/Minus
XTerm.VT100.translations: #override \
  Ctrl <Key>plus:       larger-vt-font() \n\
  Ctrl <Key>KP_Add:     larger-vt-font() \n\
  Ctrl <Key>minus:      smaller-vt-font() \n\
  Ctrl <Key>KP_Subtract:smaller-vt-font()

!------------------------------
! Catppuccin Mocha Theme
!------------------------------
*.foreground:   #cdd6f4
*.background:   #1e1e2e
*.cursorColor:  #f5e0dc

*.color0:       #45475a
*.color1:       #f38ba8
