# msmtp configuration for Gmail with OAuth2
# This file configures msmtp to send emails via Gmail SMTP

# Default account
defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# Gmail account
account gmail
host smtp.gmail.com
port 587
from pauljoshyk96@gmail.com
user pauljoshyk96@gmail.com
passwordeval "python3 ~/.config/mutt/oauth2.py"
auth oauthbearer
tls_starttls on

# Set default account
account default : gmail 