# msmtp configuration for Gmail with App Password
# This bypasses OAuth verification issues

# Default account
defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# Gmail account
account gmail
host smtp.gmail.com
port 587
from pauljoshyk96@gmail.com
user pauljoshyk96@gmail.com
password "fespajoonxlanbdn"
auth on
tls_starttls on

# Set default account
account default : gmail 